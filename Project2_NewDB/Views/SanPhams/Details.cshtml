@model Project2_NewDB.Models.SanPham

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Product Details";
}

<h1 class="mb-4">Product Details</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Product Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TenSp)</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DonGia)</dd>

            <dt class="col-sm-4">Quantity</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuong)</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MaLoaiNavigation.TenLoai)</dd>

            <dt class="col-sm-4">Image</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.MoTa))
                {
                    <img src="@Model.MoTa" alt="Product Image" class="img-thumbnail" style="max-width:250px;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.MaSp" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
