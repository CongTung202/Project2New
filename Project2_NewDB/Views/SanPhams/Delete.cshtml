@model Project2_NewDB.Models.SanPham

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Delete Product";
}

<h1 class="mb-4">Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Product Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TenSp)</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DonGia)</dd>

            <dt class="col-sm-4">Quantity</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuong)</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MaLoaiNavigation.TenLoai)</dd>

            <dt class="col-sm-4">Image</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.MoTa))
                {
                    <img src="@Model.MoTa" alt="Product Image" class="img-thumbnail" style="max-width:200px;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaSp" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>
